<TopBar>:
    name: "topbar"
    size_hint_y:0.1
    #adaptive_height: True
    #adaptive_width:True
    
    # Controle do tamanho do TopBar (que cont√©m o MDTopAppBar)
    
    #md_bg_color: [0.5, 0.5, 0.5, 1] # Cor da borda outline_color: 
    #outline_color:[1, 0, 0, 1]
    #height: dp(56)  # Tamanho fixo de 56dp para o TopBar

    MDTopAppBar:
        id: topbar
        title: "Teste Internet"
        pos_hint: {"center_x": 0.5, "top": 1}  # Posiciona o TopBar no topo
        type: "top"
        right_action_items: [[app.get_icon(), lambda x: app.switch_theme()]]
        left_action_items: [["menu", lambda x: root.callback(x)]]
