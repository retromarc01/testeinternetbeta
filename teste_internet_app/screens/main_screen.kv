<MainScreen>:
    
    MDScreen:
        name: 'main_screen'
        #orientation:"vertical"
        radius: [25, 0, 0, 0]
       
        MDBoxLayout:
            orientation: 'vertical'
            

            TopBar:
                
            MDFloatLayout:
                size_hint: 1, 1
                pos_hint: {"top": 0.15}
                
            
                MDBoxLayout:
                    id: box_layout
                    orientation: "vertical"
                    spacing: 10
                    padding: 10
                    pos_hint: {"top": 2.0/1} 

                    MDCard:
                        id:card
                        size_hint_y: None
                        height: 200
                        elevation: 3
                        padding: "4dp"
                        theme_shadow_color: "Custom"
                        shadow_color: "blue"
                        pos_hint: {"center_x": .5, "top": 20}
                        md_bg_color: app.get_card_bg_color()

                        MDBoxLayout:
                            orientation: "vertical"
                            padding: 10


                            MDLabel:
                                id:ping
                                orientation: "vertical"
                                text: "ping :"
                                #color: "grey"
                                font_style: "H5"
                                pos: "22dp", "33dp"
                                halign: "left"
                                bold: True
                                adaptive_size: True
                                theme_text_color: "Custom"
                                text_color: app.get_text_color()
                            
                            MDLabel:
                                text: "Descrição do card 1"
                                font_style: "Body1"
                                theme_text_color: "Custom"
                                text_color: app.get_text_color()

                    
    

