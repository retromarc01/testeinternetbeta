<MainScreen>:
    
    MDScreen:
        name: 'main_screen'
        orientation:"vertical"
        radius: [25, 0, 0, 0]
       
        MDBoxLayout:
            orientation: 'vertical'

            TopBar:
                
            MDLabel: 
                text:"teste screen"
                halign: "center"
                
            MDRaisedButton:
                text: 'Welcome to Kivy Reloader!'
                height: "56dp"
                size_hint_x: .3
                pos_hint: {"center_x": .5, "center_y": .5}

            MDLabel:
                text: "tester conexao com banco de dados"
                halign: "center"
            
            MDTextField:
                id: in_data
                helper_text_mode: "on_focus"
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_x: .3

            MDLabel:
                text: in_data.text
                halign: "center"

            MDRaisedButton:
                text: "insert dados"
                height: "56dp"
                size_hint_x: .3
                on_press: root.on_some_event(in_data.text)
                pos_hint: {"center_x": .5, "center_y": .5} 

            MDRaisedButton:
                text: "tela historico"
                height: "56dp"
                size_hint_x: .3
                on_press: root.manager.current = 'historico_screen' 
                pos_hint: {"center_x": .5, "center_y": .5}

    
